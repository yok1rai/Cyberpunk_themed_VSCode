{
    // ===================== ‚ö° CYBERPUNK EDITION ‚ö° =====================

    // ===== üé® Editor Appearance =====
    "editor.fontFamily": "JetBrains Mono, Fira Code, monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 15,
    "editor.lineHeight": 1.6,
    "editor.cursorBlinking": "expand",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorWidth": 2,
    "editor.smoothScrolling": true,
    "editor.wordWrap": "on",
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": false,
    "editor.guides.indentation": true,
    "editor.guides.bracketPairs": true,
    "editor.stickyScroll.enabled": true,
    "editor.scrollbar.verticalScrollbarSize": 10,
    "editor.scrollbar.horizontalScrollbarSize": 10,
    "editor.bracketPairColorization.enabled": true,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.scale": 2,
    "editor.minimap.size": "fit",
    "editor.cursorSurroundingLines": 3,
    "editor.cursorSurroundingLinesStyle": "all",
    "editor.renderLineHighlight": "gutter",
    "editor.linkedEditing": true,

    // ===== ‚öôÔ∏è Behavior & Performance =====
    "files.autoSave": "onWindowChange",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.encoding": "utf8",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "editor.tabSize": 4,
    "editor.detectIndentation": true,
    "editor.renderFinalNewline": "on",
    "terminal.integrated.enablePersistentSessions": true,
    "editor.accessibilitySupport": "off",

    // üëâ Minimal, snippet-first suggestions (no AI blocks)
    "editor.inlineSuggest.enabled": false,
    "editor.suggest.preview": false,
    "editor.snippetSuggestions": "top",
    "editor.suggest.showSnippets": true,
    "editor.quickSuggestionsDelay": 150,
    "editor.suggest.showWords": true,
    "editor.suggest.showVariables": true,
    "editor.suggest.showFunctions": true,
    "editor.suggest.showModules": true,
    "editor.suggest.showClasses": true,

    "editor.parameterHints.enabled": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    "editor.wordBasedSuggestionsMode": "currentDocument",
    "editor.unicodeHighlight.nonBasicASCII": false,

    // ===== üíª Terminal =====
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "JetBrains Mono, monospace",
    "terminal.integrated.cursorStyle": "block",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.scrollback": 5000,
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.rightClickBehavior": "paste",
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.tabs.location": "left",

    // ===== ü™ü UI / Window / Layout =====
    "window.titleBarStyle": "custom",
    "window.zoomLevel": 0,
    "window.commandCenter": true,
    "workbench.startupEditor": "none",
    "workbench.editor.centeredLayoutAutoResize": true,
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "Tokyo Night Storm",
    "workbench.statusBar.visible": true,
    "workbench.list.smoothScrolling": true,
    "workbench.tree.indent": 16,
    "workbench.list.openMode": "doubleClick",
    "breadcrumbs.enabled": true,
    "workbench.editor.enablePreview": false,
    "explorer.compactFolders": false,

    // ===== üåà Color Customization (CYBERPUNK MODE) =====
    "workbench.colorCustomizations": {
        "editor.background": "#0d0f1a",
        "editor.foreground": "#e6e6fa",
        "editorCursor.foreground": "#ff00ff",
        "editor.selectionBackground": "#4b008266",
        "editor.inactiveSelectionBackground": "#2a003344",
        "editorLineNumber.foreground": "#30364d",
        "editorLineNumber.activeForeground": "#ff00ff",
        "editorIndentGuide.background1": "#272a3f",
        "editorIndentGuide.background2": "#2f2f44",
        "editorIndentGuide.activeBackground1": "#ff00ff44",
        "editorIndentGuide.activeBackground2": "#00ffff44",
        "editor.lineHighlightBackground": "#3b006a55",
        "editor.lineHighlightBorder": "#ff00ff99",
        "editorBracketHighlight.foreground1": "#FF00FF",
        "editorBracketHighlight.foreground2": "#00FFFF",
        "editorBracketHighlight.foreground3": "#39FF14",
        "editorBracketHighlight.foreground4": "#FFD500",
        "editorBracketHighlight.foreground5": "#FF66FF",
        "editorBracketHighlight.foreground6": "#00FF9C",
        "editorBracketHighlight.unexpectedBracket.foreground": "#FF3366",
        "editorBracketHighlight.border1": "#FF00FF99",
        "editorBracketHighlight.border2": "#00FFFF99",
        "editorBracketHighlight.border3": "#39FF1499",
        "editorBracketHighlight.border4": "#FFD50099",
        "editorBracketHighlight.border5": "#FF66FF99",
        "editorBracketHighlight.border6": "#00FF9C99",
        "editorBracketHighlight.unexpectedBracket.border": "#FF336699",
        "editorBracketPairGuide.activeBackground1": "#FF00FF66",
        "editorBracketPairGuide.activeBackground2": "#00FFFF66",
        "editorBracketPairGuide.activeBackground3": "#39FF1466",
        "editorBracketPairGuide.activeBackground4": "#FFD50066",
        "editorBracketPairGuide.activeBackground5": "#FF66FF66",
        "editorBracketPairGuide.activeBackground6": "#00FF9C66",
        "editorBracketPairGuide.background1": "#FF00FF33",
        "editorBracketPairGuide.background2": "#00FFFF33",
        "editorBracketPairGuide.background3": "#39FF1433",
        "editorBracketPairGuide.background4": "#FFD50033",
        "editorBracketPairGuide.background5": "#FF66FF33",
        "editorBracketPairGuide.background6": "#00FF9C33",
        "sideBar.background": "#0f1220",
        "sideBar.foreground": "#b8b9ff",
        "tab.activeBackground": "#0d0f1a",
        "tab.activeForeground": "#ffccff",
        "tab.inactiveBackground": "#120a1c",
        "tab.inactiveForeground": "#6f6fa7",
        "tab.border": "#200033",
        "terminal.background": "#0d0f1a",
        "terminal.foreground": "#dcdcff",
        "terminalCursor.foreground": "#ff00ff",
        "terminal.ansiBlack": "#1a1a2f",
        "terminal.ansiRed": "#ff004f",
        "terminal.ansiGreen": "#00ff9c",
        "terminal.ansiYellow": "#ffea00",
        "terminal.ansiBlue": "#00bfff",
        "terminal.ansiMagenta": "#ff00ff",
        "terminal.ansiCyan": "#00fff0",
        "terminal.ansiWhite": "#e6e6fa",
        "editorGutter.modifiedBackground": "#00fff040",
        "editorGutter.addedBackground": "#00ff9c40",
        "editorGutter.deletedBackground": "#ff004f40",
        "statusBar.background": "#10001a",
        "statusBar.foreground": "#ff66ff",
        "activityBar.background": "#0b0e19",
        "activityBar.foreground": "#ff00ff",
        "activityBarBadge.background": "#ff00ff",
        "activityBarBadge.foreground": "#0d0f1a",
        "titleBar.activeBackground": "#0f1220",
        "titleBar.activeForeground": "#ffccff",
        "titleBar.inactiveBackground": "#0d0f1a",
        "titleBar.inactiveForeground": "#777799"
    },

    // ===== üîÆ CYBERPUNK SYNTAX HIGHLIGHTING =====
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            { "scope": ["keyword", "storage.type", "storage.modifier"], "settings": { "foreground": "#ff00ff", "fontStyle": "bold" } },
            { "scope": ["entity.name.function", "support.function", "meta.function-call"], "settings": { "foreground": "#00ffff", "fontStyle": "italic" } },
            { "scope": ["string", "constant.other.symbol"], "settings": { "foreground": "#39FF14" } },
            { "scope": ["constant.numeric", "constant.language"], "settings": { "foreground": "#FFD500" } },
            { "scope": ["entity.name.type", "support.class", "storage.type.class"], "settings": { "foreground": "#ff66ff" } },
            { "scope": ["variable", "variable.parameter", "variable.other.readwrite"], "settings": { "foreground": "#00bfff" } },
            { "scope": ["comment", "punctuation.definition.comment"], "settings": { "foreground": "#6f6fa7", "fontStyle": "italic" } },
            { "scope": ["keyword.operator"], "settings": { "foreground": "#ff3366" } },
            { "scope": ["punctuation", "punctuation.separator", "punctuation.terminator"], "settings": { "foreground": "#b8b9ff" } },
            { "scope": ["keyword.control.import", "meta.import", "support.module"], "settings": { "foreground": "#00FF9C", "fontStyle": "bold" } }
        ]
    }
}
